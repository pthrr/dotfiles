general {
    colors = true
    output_format = "i3bar"
    color_good = "#000000"
    color_degraded = "#000000"
    color_bad = "#FF0000"
    interval = 5
}

order += "memory"
order += "disk /"
order += "cpu_temperature 1"
order += "battery 1"
order += "volume master"
order += "tztime local"

memory {
    format = "MEM %percentage_used"
    format_degraded = "MEM %percentage_used"
}

disk "/" {
    format = "SSD %percentage_used"
}

cpu_usage {
    format = "CPU %usage"
}

cpu_temperature 1 {
    format = "CPU %degreesÂ°C"
    max_threshold = 90
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

volume master {
    format = "VOL %volume"
    format_muted = "VOL muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 1 {
    format = "%status %remaining"
    format_down = "DWN"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
    last_full_capacity = true
}

tztime local {
    timezone = "Europe/Berlin"
    format = "%a, KW %V, %d.%m.%y - %H:%M"
}
