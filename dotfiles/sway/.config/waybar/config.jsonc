{
    "layer": "bottom",
    "position": "bottom",
    "height": 28,
    "spacing": 2,
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": [],
    "modules-right": ["tray", "cpu", "memory", "disk", "battery", "pulseaudio", "clock"],

    "sway/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "format": "{name}"
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "tray": {
        "icon-size": 28,
        "spacing": 10
    },

    "cpu": {
        "format": "CPU: {usage}%",
        "tooltip": true,
        "interval": 3
    },

    "memory": {
        "format": "MEM: {}%",
        "tooltip": true,
        "interval": 3
    },

    "disk": {
        "format": "DSK: {free}",
        "path": "/",
        "tooltip-format": "Used: {used} / Total: {total} ({percentage_used}%)",
        "interval": 30
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "BAT: {time} (D)",
        "format-charging": "BAT: {time} (C)",
        "format-plugged": "BAT: FULL",
        "format-full": "BAT: FULL",
        "tooltip-format": "{capacity}% - {time}",
        "interval": 3
    },

    "pulseaudio": {
        "format": "VOL: {volume}%",
        "format-muted": "VOL: M",
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "tooltip": true
    },

    "clock": {
        "format": "KW {:%V, %a, %d.%m.%Y - %H:%M}",
        "tooltip-format": "{:%a %d %b %Y}",
        "interval": 60
    }
}
