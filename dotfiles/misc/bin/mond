#!/usr/bin/env bash
set -euo pipefail

PWD=$1
echo "Working on ´$PWD´ .."

inotifywait -q --event modify,create,delete,move  -mr $PWD |
    while read directory action file; do
        sleep 1
        echo "[[=== start ===]]"
        echo "Trigger: directory=$directory file=$file action=$action"
        ${@:2}
        echo "[[=== done ===]]"
    done
