#!/usr/bin/env bash
set -euo pipefail

DIR=$1
cd $DIR

kExecRegex='^Exec=.+$'
kExecRegexNix='^Exec=nixGL.+$'
for file in *; do
    if [[ -f $file && $file == *.desktop ]]; then
        echo "Entering file $file .."
        c=0
        while read line; do
            c=$((c+1))
            if [[ $line =~ $kExecRegex && ! $line =~ $kExecRegexNix ]]; then
                echo " Replacing line $c: $line .."
                sed -i "${c}s/Exec=/Exec=nixGL /" $file
            fi
        done < $file
    fi
done
