#! /bin/sh

case "$1" in
    *://*)
        exec $BROWSER "$1"
        ;;
    *.pdf|*.djvu)
        exec $PDFVIEWER "$1"
        ;;
    *.jpg|*.png)
        exec $IMAGEVIEWER "$1"
        ;;
    *.mp3|*.mp4)
        exec $MEDIAPLAYER "$1"
        ;;
    /*|~/*)
        exec $FILEMANAGER "$1"
        ;;
    *)
        xdg-open "$1"
        ;;
esac
