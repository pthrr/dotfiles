#!/usr/bin/env bash
set -euo pipefail

case "${@: -1}" in
    *://*)
        exec $BROWSER "$@"
        ;;
    *.pdf|*.djvu)
        exec $PDFVIEWER "$@"
        ;;
    *.jpg|*.jpeg|*.png)
        exec $IMAGEVIEWER "$@"
        ;;
    *.mp3|*.mp4)
        exec $MEDIAPLAYER "$@"
        ;;
    /*|~/*)
        exec $FILEMANAGER "$@"
        ;;
    *)
        xdg-open "$@"
        ;;
esac
