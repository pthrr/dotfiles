DEFAULT_SESSION="startxfce4"

. "$HOME/.xsessionrc"

# Start WM
case $1 in
i3)
	setxkbmap -layout de -model pc105 -option terminate:ctrl_alt_bksp -option caps:none
	xsetroot -solid black &
	redshift -O 4000 &
	nm-applet &
	nextcloud &
	echo "Starting at $(date)" >> "$XDG_CONFIG_HOME/i3/log"
	exec i3 >> "$XDG_CONFIG_HOME/i3/log" 2>&1
	;;
*)
	exec $DEFAULT_SESSION
	;;
esac
