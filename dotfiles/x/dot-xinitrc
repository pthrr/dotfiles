DEFAULT_SESSION="startxfce4"

. "$HOME/.xsessionrc"

case $1 in
i3)
    setxkbmap -layout de -model pc105 -option terminate:ctrl_alt_bksp -option caps:none
    xsetroot -solid black
    echo "Starting at $(date)" >> "$XDG_CONFIG_HOME/i3/log"
    exec i3 >> "$XDG_CONFIG_HOME/i3/log" 2>&1
    ;;
openbsd-cwm)
    setxkbmap -layout de -model pc105 -option terminate:ctrl_alt_bksp -option caps:none
    xsetroot -solid black
    redshift -PO 4000
    killall -q nm-applet;nm-applet &
    killall -q nextcloud;nextcloud &
    echo "Starting at $(date)" >> "$XDG_CONFIG_HOME/cwm/log"
    exec openbsd-cwm >> "$XDG_CONFIG_HOME/cwm/log" 2>&1
    ;;
ratpoison)
    setxkbmap -layout de -model pc105 -option terminate:ctrl_alt_bksp -option caps:none
    xsetroot -solid black -cursor_name left_ptr
    redshift -PO 4000
    exec ratpoison
    ;;
*)
    exec $DEFAULT_SESSION
    ;;
esac
