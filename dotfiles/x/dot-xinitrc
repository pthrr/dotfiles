DEFAULT_SESSION="ratpoison"

. "$HOME/.xsessionrc"

case $1 in
startxfce4)
    exec startxfce4
    ;;
ratpoison)
    setxkbmap -layout de -model pc105 -option terminate:ctrl_alt_bksp -option caps:none
    xsetroot -solid black -cursor_name left_ptr
    redshift -PO 4000
    exec ratpoison
    ;;
*)
    exec $DEFAULT_SESSION
    ;;
esac
