if [ -f "/etc/profile" ] ; then
    . "/etc/profile"
fi

if [ -f "$HOME/.profile" ] ; then
    . "$HOME/.profile"
fi

if [ -f "/etc/xprofile" ] ; then
    . "/etc/xprofile"
fi

if [ -f "$HOME/.xprofile" ] ; then
    . "$HOME/.xprofile"
fi

if [ -f "$HOME/.xresources" ] ; then
    xrdb -merge "$HOME/.xresources"
fi
