[bar/top]
width = 1366
height = 16
wm-name = polybar
top = true
background = #000000
foreground = #646464
padding-left = 0
padding-right = 1
tray-position = right
font-0 = "Fira Code:weight=Light:size=10;2"
modules-right = filesystem gap temperature gap memory gap battery

[module/gap]
type = custom/text
content = " | "

[module/memory]
type = internal/memory
label = RAM %percentage_used%%
label-warn = RAM %percentage_used%%
interval = 10

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%
label-full = Fully charged
label-low = BATTERY LOW
poll-interval = 10

[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input
label = CPU %temperature-c%
label-warn = CPU %temperature-c%
interval = 10

[module/filesystem]
type = internal/fs
mount-0 = /
fixed-values = true
spacing = 4
label-mounted = SSD %percentage_used%%
label-unmounted = SSD not mounted
label-warn = SSD %percentage_used%%
interval = 10
