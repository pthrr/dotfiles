sticky yes
snapdist 4
gap 30 0 0 0
borderwidth 2

fontname "mono:pixelsize=10"

color inactiveborder black
color activeborder "#646464"
color menubg "#a8ff60"
color menufg "#000"

# KEYBINDINGS:
# 4 = mod (windows key)
# S = shift
# C = control
# M = meta (alt)
unbind-key all

bind-key MS-r restart
bind-key MS-q quit
bind-key MS-Return kitty
#bind-key MS-l xlock # -> solve auth issue

bind-key M-p menu-exec
bind-key 4-slash menu-window
bind-key 4-r menu-cmd

bind-key 4-1 group-toggle-1
bind-key 4-2 group-toggle-2
bind-key 4-3 group-toggle-3
bind-key 4-4 group-toggle-4
bind-key 4-5 group-toggle-5
bind-key 4-6 group-toggle-6
bind-key 4-7 group-toggle-7
bind-key 4-8 group-toggle-8
bind-key 4-9 group-toggle-9

bind-key M-1 group-only-1
bind-key M-2 group-only-2
bind-key M-3 group-only-3
bind-key M-4 group-only-4
bind-key M-5 group-only-5
bind-key M-6 group-only-6
bind-key M-7 group-only-7
bind-key M-8 group-only-8
bind-key M-9 group-only-9

bind-key C-1 group-close-1
bind-key C-2 group-close-2
bind-key C-3 group-close-3
bind-key C-4 group-close-4
bind-key C-5 group-close-5
bind-key C-6 group-close-6
bind-key C-7 group-close-7
bind-key C-8 group-close-8
bind-key C-9 group-close-9

bind-key MS-1 window-movetogroup-1
bind-key MS-2 window-movetogroup-2
bind-key MS-3 window-movetogroup-3
bind-key MS-4 window-movetogroup-4
bind-key MS-5 window-movetogroup-5
bind-key MS-6 window-movetogroup-6
bind-key MS-7 window-movetogroup-7
bind-key MS-8 window-movetogroup-8
bind-key MS-9 window-movetogroup-9

bind-key M-j group-cycle
bind-key M-k group-rcycle
bind-key M-h window-cycle-ingroup
bind-key M-l window-rcycle-ingroup

bind-key MS-c window-close
bind-key 4-g window-group
bind-key 4-BackSpace window-hide
bind-key 4-Down window-lower
bind-key 4-Up window-raise
bind-key 4-m window-maximize
bind-key 4S-v window-vtile
bind-key 4S-s window-htile

# mod + H,J,K,L = move window left, down, up, right 10 pixels
bind-key 4-h window-move-left-big
bind-key 4-j window-move-down-big
bind-key 4-k window-move-up-big
bind-key 4-l window-move-right-big

# mod + shift + H,J,K,L = resize window left, down, up, right by 10 pixels
bind-key 4S-h window-resize-left-big
bind-key 4S-j window-resize-down-big
bind-key 4S-k window-resize-up-big
bind-key 4S-l window-resize-right-big

# unbind default mouse actions
unbind-mouse M-1
unbind-mouse CM-1
unbind-mouse M-2
unbind-mouse M-3
unbind-mouse CMS-3

bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize
bind-mouse 4-2 window-lower
bind-mouse 4S-2 window-hide

# Ignore list
ignore termbar

# Autogroup definitions
autogroup 0 termbar

# these commands will appear in the command menu
command chromium chromium
command kitty kitty
command xterm xterm
