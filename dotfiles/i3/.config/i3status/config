general {
    colors = true
    output_format = "i3bar"
    color_good = "#646464"
    color_degraded = "#BCBCBC"
    color_bad = "#FFFFFF"
    interval = 5
}

order += "volume master"
order += "memory"
order += "disk /"
order += "cpu_temperature 0"
order += "battery 0"
order += "tztime local"

volume master {
        format = "VOL %volume"
        format_muted = "VOL muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

memory {
    format = "RAM %free"
    format_degraded = "MEM %free"
    threshold_degraded = "10%"
}

disk "/" {
    format = "SSD %free"
}

cpu_temperature 0 {
    format = "CPU %degrees Â°C"
}

battery 0 {
    format = "BAT %emptytime %status"
    format_down = "BAT -"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    timezone = "Europe/Berlin"
    format = "%a, KW %V, %d.%m.%y - %H:%M"
}
