{
    "coc.preferences.enableMarkdown": true,
    "suggest.noselect": true,
    "list.height": 20,
    "diagnostic": {
        "virtualText": true,
        "virtualTextCurrentLineOnly": false,
        "virtualTextLines": 1,
        "virtualTextPrefix": " —— "
    },
    "[markdown][xml][json][yaml][toml][scala][typescript][zig][rust][c][cpp][python]": {
        "coc.preferences.formatOnSave": true
    },
    "snippets.userSnippetsDirectory": "~/Vorlagen/snippets",
    "snippets.ultisnips.pythonPrompt": false,
    "clangd.arguments": [
        "--compile-commands-dir=build"
    ],
    "zig.zls.path": "~/.nix-profile/bin/zls",
    "zig.zls.checkForUpdate": false,
    "rust-analyzer.server.path": "~/.nix-profile/bin/rust-analyzer",
    "python.venvPath": "venv",
    "python.linting.ruffEnabled": true,
    "python.formatting.provider": "black",
    "pyright.testing.provider": "pytest",
    "pyright.organizeimports.provider": "ruff"
}
