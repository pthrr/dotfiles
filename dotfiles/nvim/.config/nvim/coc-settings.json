{
  "coc.preferences.enableMarkdown": true,
  "suggest.noselect": true,
  "list.height": 20,
  "diagnostic": {
    "virtualText": true,
    "virtualTextCurrentLineOnly": false,
    "virtualTextLines": 1,
    "virtualTextPrefix": " —— "
  },
  "[markdown][xml][json][yaml][toml][quint][typst][typescript][zig][rust][c][cpp][python]": {
    "coc.preferences.formatOnSave": true
  },
  "snippets.userSnippetsDirectory": "~/Vorlagen/snippets",
  "snippets.ultisnips.pythonPrompt": false,
  "clangd.arguments": ["--compile-commands-dir=build"],
  "clangd.fallbackFlags": ["-std=c++20"],
  "zig.zls.path": "~/.nix-profile/bin/zls",
  "zig.zls.checkForUpdate": false,
  "rust-analyzer.server.path": "~/.nix-profile/bin/rust-analyzer",
  "python.venvPath": "venv",
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "black",
  "pyright.testing.provider": "pytest",
  "pyright.organizeimports.provider": "isort",
  "languageserver": {
    "quint": {
      "command": "quint-language-server",
      "args": ["--stdio"],
      "rootPatterns": [".gitignore"],
      "trace.server": "verbose",
      "filetypes": ["quint"]
    },
    "typst": {
      "command": "typst-lsp",
      "rootPatterns": [".gitignore"],
      "trace.server": "verbose",
      "filetypes": ["typst"]
    }
  }
}
