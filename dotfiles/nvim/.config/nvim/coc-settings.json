{
    "suggest.noselect": true,
    "[markdown][xml][json][yaml][toml][elixir][haskell][zig][rust][c][cpp][python]": {
        "coc.preferences.formatOnSave": true,
    },
    "coc.preferences.enableMarkdown": true,
    "pyright.organizeimports.provider": "isort",
    "pyright.testing.provider": "pytest",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.ruffEnabled": true,
    "python.analysis.typeCheckingMode": "off",
    "snippets.userSnippetsDirectory": "~/Vorlagen/snippets",
    "clangd.arguments": [
        "--compile-commands-dir=build"
    ],
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true,
                    "maxNumberOfProblems": 10,
                    "completionSnippetsOn": true
                }
            }
        }
    },
    "list.height": 20,
    "diagnostic": {
        "virtualText": true,
        "virtualTextCurrentLineOnly": false,
        "virtualTextLines": 1,
        "virtualTextPrefix": " —— "
    },
    "snippets.ultisnips.pythonPrompt": false,
    "zig.zls.path": "~/.nix-profile/bin/zls",
    "zig.zls.checkForUpdate": false,
    "rust-analyzer.server.path": "~/.nix-profile/bin/rust-analyzer"
}
