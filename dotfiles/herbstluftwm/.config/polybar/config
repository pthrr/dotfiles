[bar/top]
width = 1366
height = 16
wm-name = polybar
top = true
bottom = false
background = #000000
foreground = #646464
padding-left = 0
padding-right = 1
tray-position = right
tray-offset-y = 1
font-0 = "Fira Code:weight=Regular:size=10;2"
modules-right = space-status gap filesystem gap memory gap battery gap date

[bar/bottom]
width = 1366
height = 16
wm-name = polybar
top = false
bottom = true
background = #9999bb
foreground = #000000
padding-left = 0
padding-right = 1
tray-position = right
tray-offset-y = 0
font-0 = "Fira Code:weight=Regular:size=10;2"
modules-left = battery gap memory gap filesystem gap cpu
modules-center = herbstluftwm
modules-right = space-status gap date

[module/gap]
type = custom/text
content = " | "

[module/herbstluftwm]
type = custom/script
exec = MONITOR=HDMI-0 ~/.config/polybar/herbstluftwm.sh
exec-if = ps -C herbstluftwm >/dev/null 2>&1
tail = true
interval = 1

[module/date]
type = internal/date
date = %a, KW %V, %d-%m-%y%
time = %H:%M
label = %date% %time%

[module/space-status]
type = custom/script
exec = curl -s https://api.muc.ccc.de/spaceapi.json | jq '.state.message'
interval = 90

[module/cpu]
type = internal/cpu
warn-percentage = 90
label = CPU %percentage%%
label-warn = CPU %percentage%%
interval = 1

[module/memory]
type = internal/memory
label = RAM %percentage_used%%
label-warn = RAM %percentage_used%%
interval = 10

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 99
low-at = 9
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%
label-full = Fully charged
label-low = BATTERY LOW
poll-interval = 10

[module/filesystem]
type = internal/fs
mount-0 = /
fixed-values = true
spacing = 4
label-mounted = SSD %percentage_used%%
label-warn = SSD %percentage_used%%
label-unmounted = SSD not mounted
label-unmounted-foreground = #55
interval = 10
