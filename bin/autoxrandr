#!/bin/bash

for output in $(xrandr | grep '\Wconnected' | awk '{ print $1 }'); do
    if [[ $output =~ ^eDP1.*$ ]]; then
        edp1=$output
    fi
done

for output in $(xrandr | grep '\Wconnected' | awk '{ print $1 }'); do
    if [[ ! $output =~ ^eDP1.*$ ]]; then
        xrandr --output $edp1 --auto $output --pos 0x0 --auto \
                --right-of $edp1 --primary
    fi
done
