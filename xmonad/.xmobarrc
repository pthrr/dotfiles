Config { font = "-*-fixed-*-*-*-*-15-*-100-100-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopP 0 65
       , border = NoBorder
       , allDesktops = True
       , persistent = True
       , commands = [ Run Date "%a, KW %V, %d.%m.%y - %H:%M" "date" 60
                , Run Battery ["--template", "Bat <timeleft>h"
                        , "--Low", "5"
                        , "--High", "20"
                        , "--low", "red"
                        , "--normal", "yellow"
                        , "--high", "grey"
                        ] 60
                , Run Memory ["--template", "Mem <usedratio>%"
                        , "--Low", "80"
                        , "--High", "90"
                        , "--low", "grey"
                        , "--normal", "yellow"
                        , "--high", "red"
                        ] 10
                , Run CoreTemp ["--template", "CPU <core0>°C <core1>°C"
                        , "--Low", "70"
                        , "--High", "80"
                        , "--low", "grey"
                        , "--normal", "yellow"
                        , "--high", "red"
                        ] 60
                , Run DiskU [("/", "SSD <free>")] [
                        ] 60
                , Run StdinReader
                ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ | %disku% | %coretemp% | %memory% | %battery% | %date% |"
       }

